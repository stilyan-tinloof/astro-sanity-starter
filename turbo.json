{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "PUBLIC_SANITY_PROJECT_ID",
        "PUBLIC_SANITY_DATASET",
        "SANITY_TOKEN"
      ]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["typegen:watch"]
    },
    "typegen": {
      "outputs": ["schema.json", "sanity.types.ts"],
      "cache": true,
      "env": ["PUBLIC_SANITY_PROJECT_ID", "PUBLIC_SANITY_DATASET"]
    },
    "typegen:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
